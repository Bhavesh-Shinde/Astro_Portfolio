---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
    <section class="min-h-[80vh] flex items-center justify-center px-4 py-16">
        <div
            class="w-full max-w-2xl bg-white/20 backdrop-blur-md p-8 rounded-xl shadow-lg text-white"
        >
            <h1 class="text-3xl font-bold mb-6 text-center">Get In Touch</h1>
            <form class="space-y-6">
                <div>
                    <label for="name" class="block mb-1 font-medium"
                        >Your Name</label
                    >
                    <input
                        placeholder="Enter Your Name"
                        class="w-full px-4 py-2 rounded-md bg-white/30 text-white placeholder-white/70 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:bg-white/40 transition"
                        type="text"
                        name="name"
                    />
                </div>
                <div>
                    <label class="block mb-1 font-medium">Email Address</label>
                    <input
                        class="w-full px-4 py-2 rounded-md bg-white/30 text-white placeholder-white/70 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:bg-white/40 transition"
                        placeholder="Enter Email Address"
                        type="email"
                        name="email"
                    />
                </div>
                <div>
                    <label class="block mb-1 font-medium">Your Message</label>
                    <textarea
                        class="w-full px-4 py-2 rounded-md bg-white/30 text-white placeholder-white/70 border border-white/30 focus:outline-none focus:ring-2 focus:ring-white focus:bg-white/40 transition"
                        placeholder="Type Message..."
                        name="message"></textarea>
                </div>
                <div>
                    <button
                        class="text-indigo-600  font-semibold px-6 py-2 rounded-md hover:bg-gray-100 transition"
                        >Submit</button
                    >
                </div>
            </form>
        </div>
    </section>
</Layout>
