---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
    <h1 class="text-3xl text-center font-bold mb-5">My Projects</h1>
    <div class="min-h-screen mt-8 grid lg:grid-cols-3 grid md:grid-cols-2 sm:grid-cols-1 gap-6 flex flex-col justify-center items-center">

        <div class="text-2xl font-semibold mb-2 ">
            <h2 class="text-2xl font-semibold mb-2 ">Invoice Manager</h2>
            <iframe class="md:w-3/4 sm:4/4 h-130 bg-white rounded-lg border" src="https://invoice-bill-sample.vercel.app"></iframe>
          <a href="https://invoice-bill-sample.vercel.app" target="_blank" class="inline-block px-6 py-2 my-4 rounded-lg backgrop-blur-sm bg-white/20 text-white border border-white/30 hover:bg-white/30 transition duration-300" href="/projects">Visit Website</a>
         </div>

       

          <div>
            <h2 class="text-2xl font-semibold mb-2 ">News App</h2>
            <iframe class="md:w-3/4 sm:4/4 h-130 bg-white rounded-lg border" src="https://news-application-latest.vercel.app"></iframe>
          <a href="https://news-application-latest.vercel.app" target="_blank" class="inline-block px-6 py-2 my-4 rounded-lg backgrop-blur-sm bg-white/20 text-white border border-white/30 hover:bg-white/30 transition duration-300" href="/projects">Visit Website</a>
         </div>

          <div>
            <h2 class="text-2xl font-semibold mb-2 ">Goldmedal Website</h2>
            <iframe class="md:w-3/4 sm:4/4 h-130 bg-white rounded-lg border" src="https://goldmedal-web.vercel.app"></iframe>
           <a href="https://goldmedal-web.vercel.app" target="_blank" class="inline-block px-6 py-2 my-4 rounded-lg backgrop-blur-sm bg-white/20 text-white border border-white/30 hover:bg-white/30 transition duration-300" href="/projects">Visit Website</a>
         </div>

         

           <div>
            <h2 class="text-2xl font-semibold mb-2 ">TO-DO List</h2>
            <iframe class=" md:w-3/4 sm:4/4 h-130 bg-white rounded-lg border" src="https://to-do-list-iota-flax.vercel.app"></iframe>
            <a href="https://to-do-list-iota-flax.vercel.app" target="_blank" class="inline-block px-6 py-2 my-4 rounded-lg backgrop-blur-sm bg-white/20 text-white border border-white/30 hover:bg-white/30 transition duration-300" href="/projects">Visit Website</a>
         </div>

         

    </div>
    
</Layout>